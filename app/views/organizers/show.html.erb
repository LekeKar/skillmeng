<% title @organizer.name %>

<div class="col-xs-12 col-sm-12 col-md-12" style="margin-top: -25px;">
	<div class="row container-fluid" style="background-color: #f7c9a2; padding: 30px;">
		<%= render "header" %>
	</div>		
	
	<div class="col-xs-12 col-sm-12 col-md-12 organizer_content">
		<div class="row" id="org_courses">

      <h3 class="featured_menu mobile_centralize" style="padding-bottom: 15px; margin-left: 5px;" >
        <a href="#courses" role="tab" data-toggle="tab" id="courses_tabs">
          <span class="menu-item active" >
           &nbsp;<%= "course".pluralize(@organizer.courses.count) %>
          </span> &nbsp;|
        </a>
      
        <a href="#tutors" role="tab" data-toggle="tab" id="tutors_tabs">
          <span class="menu-item" >
           &nbsp;tutors&nbsp;
          </span>
        </a>
      </h3>
      
      <div class="tab-content">
    		<div class="tab-pane fade active in" id="courses">
					<%= render "courses" %>
					
					<% if @organizer.courses.count < 8 && current_user && current_user.id == @organizer.user_id %>
						<div class="col-xs-12 col-sm-6 col-md-3">
							<div class="panel panel-default">
							  <div class="panel-body text-center" id="add_course_org">
							    <%= link_to new_course_path, style:"color: #666666" do %>
								    <h1 style="display: inline-block;"> add new course <br>
								    	<i class="fa fa-plus-square"></i>	
								    </h1>
							    <% end %>
							  </div>
							</div>
						</div>
					<% end %>
					
				</div>
				
				<div class="tab-pane fade" id="tutors" style="margin-top: 15px;">
          <div class="container-fluid">
          	<% if @tutors %>
          		<%= render @tutors %>
          		<% if current_user && current_user.id == @organizer.user_id %>
								<div class="col-xs-12 col-sm-6 col-md-3">
									<div class="panel panel-default">
									  <div class="panel-body text-center" id="add_tutor_org">
									    <%= link_to  new_organizer_tutor_path(@organizer), style:"color: #666666" do %>
										    <h1 style="display: inline-block;"> add new tutor <br>
										    	<i class="fa fa-plus-square"></i>	
										    </h1>
									    <% end %>
									  </div>
									</div>
								</div>
							<% end %>
          	<% end %>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>

<!--share modal  -->
<div class="modal fade modal_share" tabindex="-1" role="dialog" aria-labelledby="modal_contact">
  <div class="modal-dialog modal-md" role="document">
    <div class="modal-content">
      <div class="modal-body text-center">
        <%= social_share_button_tag(@organizer.name, :url => "https://skllming-leke.c9users.io/organizers/#{@organizer.slug}") %> <br>
        <div class="input-group">
          <input type="text" id="foo" value="https://skllming-leke.c9users.io/organizers/<%= @organizer.slug %>" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-warning btn-md" data-clipboard-target="#foo" type="button" data-toggle="tooltip" data-placement="left" title="Copied!">Copy</button>
          </span>
        </div>
      </div>
      <div class="modal-footer">
        <a type="button" data-dismiss="modal" style="color: #d9534f;">close</a>
      </div>
    </div>
  </div>
</div>

<!--contact modal  -->
<div class="modal fade modal_contact" tabindex="-1" role="dialog" aria-labelledby="contact_modal">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-body text-center">
        <div class="row">
          <div class="container-fluid">
          	<% if @organizer && !@organizer.email.blank? %>
             <%= @organizer.email %>
            <% end -%> <br>
            <% if @organizer && !@organizer.phone.blank? %>
             <%= number_to_phone(@organizer.phone)%>
            <% end -%> <br>
            <% if @organizer && !@organizer.website.blank? %>
              <a href="http://<%=@organizer.website%>" class="dont-break-out" target="_blank" >
              <%=@organizer.website%>
              </a>
            <% end -%>
           
            <div style="margin_bottom: 10px;">
              <% if @organizer.location.present? %>
                <br> <% @address = @organizer.location %>
                <%= link_to  "http://maps.google.com/maps?q=#{@address.address_line2 } #{@address.city} ", :target => "_blank" do %>
                  <% if @address.address_line1.present? %>
                    <%= @address.address_line1 %>,
                  <%end%> <%= @address.address_line2 %>,<br>  <%= @address.city %>,  <%= @address.state %> 
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <a type="button" data-dismiss="modal" style="color: #d9534f;">close</a>
      </div>
    </div>
  </div>
</div>


<!--addon modal  -->
<div class="modal fade modal_addon" tabindex="-1" role="dialog" aria-labelledby="addon_modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <% if current_user && current_user.id == @organizer.user_id %>
          <%= render "organizer_orders/form" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!--additional about mobile modal  -->
<div class="modal fade modal_add_about" tabindex="-1" role="dialog" aria-labelledby="addon_modal">
  <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
      <div class="modal-body text-center">
        <%= @organizer.about %>
      </div>
      <div class="modal-footer">
        <a type="button" data-dismiss="modal" style="color: #d9534f;">close</a>
      </div>
    </div>
  </div>
</div>

	<%= render "helper_code/raty" %>
	<%= render "helper_code/tooltip_toggle" %>
	<%= render "helper_code/single_page_tabs" %>