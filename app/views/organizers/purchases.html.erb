<% title "Purchases for #{@organizer.name}" %>

	

<div class="container-fluid">
	<div class="row">
		<div class=" col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
			<div class="profile_body" style="margin-bottom: 50px;">
				<div class="container-fluid title_header text-center">
			    <div class="title_text" >
			      Purchases
			    </div>
				</div>
				<div class="container-fluid profile_content" style="background-color: #FFFFFF;">
					<div class="row">
						<% if !@all_orders.empty? %>
							<table class="table table-striped table-hover" style="margin-top:20px;">
					       <tr class="text-center">
					        <td><strong> Date</strong></td>
						       <td><strong> Order # </strong></td>
						       <td><strong> Total</strong></td>
						       <td><strong> Action</strong></td>
						     </tr>
	  					  
	  					
	  					  <div id="org_orders">
	                <%= render "org_orders" %>
	              </div>
	            
	              <div id="infinite-scrolling" class="text-center">
	                <%= will_paginate @all_orders %>
	              </div>
						  </table>
						<% else %>
							<div class="container-fluid" >
						  	<div class="quote">
						  		<h3>
						  			On this page, you can view all successful orders made by your organization.
						  		</h3>
						  	</div>
						  </div>
						 <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<script>
  $('#my-org_orders').append('<%= j render "org_orders" %>');
  <% if @all_orders.next_page %>
    $('.pagination').replaceWith('<%= j will_paginate @all_orders %>');
  <% else %>
    $('.pagination').remove();
  <% end %>
</script>