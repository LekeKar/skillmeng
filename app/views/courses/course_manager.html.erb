
<% title "#{@course.title} manager" %>
<div class="container">
	<div class="row">
	  
	  <div class="col-xs-12 col-sm-6 col-md-4">
	  	<div class="panel panel-default text-center" style="background-color: #e27937; padding: 5px;">
		    <h4 style="margin: 5px;">
		    	<i class="fa fa-arrow-circle-left" style="color: #FFFFFF;"></i> <%= link_to "manager profile", @user_organizer, style:"color: #FFFFFF;" %>
		  	</h4>
		  </div>
	    
	    <%-# Overview content -%>
	    <%= render "courses/course_management/overview" %>
	  </div>
	  
	  <%-# Course completness -%>
    <div class="col-xs-12 col-sm-6 col-md-4">
  	  <%= render "courses/course_management/completeness" %>
  	</div>
  	
		<%-# Add-ons content -%>
		<div class="col-xs-12 col-sm-6 col-md-4">
	    <div class="panel panel-default panel-class" id="class_overview">
	      <div class="panel-heading">
		      <strong> Post News</strong></strong>
		    </div>
		    <div class="panel-body container-fluid">
		    	<% unless @course.course_state == "suspended"%>
		    	  <% if @course.course_state == "setup" %>
			     		<h5>The "add news" option will become available once this course is published.</h5>
			     	<% else %>
			     		<%= render "announcements/form"%>
			     	<% end  %>
		     	<% else %>
		     	<div style="text-align: justify">
		     		Announcement feature has been disabled because your course has been suspended by admin.
		     		Please contact us at <strong>info@skillmeng.com</strong> for inquiries. 
		     	</div>
		     	<% end %>
		    </div>
		  </div>
		</div>
	  
	</div>
	

</div>  
<%= render "helper_code/raty" %>
<%= render "helper_code/tooltip_toggle" %>