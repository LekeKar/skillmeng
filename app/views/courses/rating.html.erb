<%-# Style Alterator  -%>
<% @disappear = 'disappear'%>

<div class="container course_body" style="background-color: #FFFFFF;">
  <div class="row reviews_content">
    <div class=" col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
      
			<h2 style="color: #777777;">
			  Reviews for 
			  <br><small><%= @course.title.titleize %></small>
			</h2>
			
  	  <div class="row" style="margin-top: 40px;">
        <%= render @reviews_paginate %>
      </div>
      
      <div class="row text-center" >
        <div id="paginate">
          <%= will_paginate @reviews_paginate, inner_window: 0, outer_window: 0, renderer: BootstrapPagination::Rails %>
        </div> 
      </div> 
    </div> 
  </div>
</div>

