<% title "#{@course.title} ratings  " %>
<div class="container-fluid">
	<div class="row">
		<div class=" col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
		  <div class="profile_body" style="margin-bottom: 50px;">
				<div class="container-fluid title_header text-center">
			    <div class="title_text">
			      Reviews
			    </div>
				</div>
				<div class="container-fluid profile_content text-center" style="padding-top: 30px; background-color: #FFFFFF;">
					<div class="row" >
					  <div class="container-fluid">
  						<div id="ratings">
  							<% if !@reviews_paginate.empty? %>
  						  	<%= render @reviews_paginate %>
  						  <% else %>
  						  	<div class="quote">
  						  		<h3>
  						  			This course doesn't have any reviews yet. <br> If you have taken this course please leave a review. <br> 
  						  			<%= link_to new_course_review_path(@course), class:"btn btn-md btn-default", style: "background-color: #fff; border:none; color: #de7947; margin-top: 15px;"  do %>
                        add review
                      <% end %>
  						  		</h3>
  						  	</div>
  						  <% end %>
  						</div>
						</div>
					</div>
					
					<div class="row">
					  <div id="infinite-scrolling" class="text-center" style="color: #777777;">
					  	<%= will_paginate @reviews_paginate %>
					  </div>
					</div>
				</div>
			</div>
    </div>
  </div>
</div>



<!-- Helps display Rating stars -->
	<%= render "helper_code/raty" %>
	<%= render "helper_code/tooltip_toggle" %>