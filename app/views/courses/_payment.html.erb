<div class="panel panel-default panel-class">
  <div class="panel-heading">
    <span class="active">
      <a href="#price_info" role="tab" data-toggle="tab" id="about_tabs">
        <strong>
          Prices
        </strong>
      </a>
    </span>
    <span>
      <% if @course_payment && !@course_payment.bank_name.nil? && !@course_payment.bank_account_number.nil? %>
        <a href="#payment_info" role="tab" data-toggle="tab" id="about_tabs">
          <span>|</span> <strong>Payment Info</strong>
        </a>
      <% end %>
    </span>
    <% if @course_payment && current_user && current_user.id == @course.user_id && params[:visitor] != "visitor" %>
       <%= link_to 'Edit', edit_course_course_payment_path(@course, @course_payment), class:"btn btn-default btn-sm pull-right"%>
    <% end -%>
  </div>
  <div class="container-fluid" style="padding: 15px;">
    <div class="tab-content price_body">
      <div class="tab-pane fade active in" id="price_info">
        <div>
          <% if @course_payment && !@course_payment.course_prices.empty? %>
            <div class="row">
              <% for price in @course_payment.course_prices.order('price ASC') do %>
                <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                  <h5>
                    <strong> <%= price.price? ? "â‚¦#{number_with_delimiter(price.price.floor)}" : "Free" %> </strong> for <%= pluralize(price.quantity, "#{price.unit}") %> <br>
                    <small>
                      <%= price.explaination %>
                    </small>
                  </h5>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center">
              <%if current_user && current_user.id == @course.user_id && params[:visitor] != "visitor" && @course_payment.nil? -%>
                <h4> Tell people how much the course costs </h4>
                <%= link_to 'Add plans', new_course_course_payment_path(@course), class:"btn btn-default"%>
              <% else %> 
                <h4 class="text-center">No info provided</h4>  
              <% end -%>
            </div>
          <% end %>
        </div>
      </div>
      <% if @course_payment && !@course_payment.bank_name.nil? && !@course_payment.bank_account_number.nil? %>
        <div class="tab-pane fade" id="payment_info">
          <div id="payment_warning" class="text-center">
            <strong>Hollup</strong>, before you pay for this course make sure you have done your due diligence. Skillmeng will not accept any responisblities beyond this point. In short... pay at your own risk!
            <br><button class="btn btn-success btn-sm" id="payment_warning_accept" type="submit" style="margin-top: 10px;">I want to pay</button>
          </div>
          <div id="actual_payment_info" style="display: none;">
            <strong>Bank Name:</strong> <%= @course_payment.bank_name %><br>
            <strong>Account Number:</strong> <%= @course_payment.bank_account_number %><br>
            <strong>Account Name:</strong> <%= @course_payment.bank_account_name %><br>
            <strong>Payment Instructions:</strong>
            <% if @course_payment.payment_instruction.present? %>
              <br><%= @course_payment.payment_instruction %>
            <% else %>
              <span class="text-center" style="color: grey;">No refund info provided</span>
            <% end %><br>
            <strong>Refund Instructions:</strong>
            <% if @course_payment.refund_instruction.present? %>
              <br><%= @course_payment.refund_instruction %>
            <% else %>
              <span class="text-center" style="color: grey;">No refund info provided</span>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
  <%if current_user && @course_payment && @course_payment.trade_by_barter? && current_user.id != @course.user_id -%>
    <div class="panel-footer text-center">
      <%= link_to new_course_course_request_path(@course) do %>
        Try barter
      <% end %>
      <span data-toggle="tooltip" title="This course owner is willing to teach you this course in exchange of learning from one of the courses you offer on Skillmeng&trade;. Click 'Pay' and see if you could strike a deal. Goodluck!"><i class="fa fa-question-circle"></i></span>
    </div>
  <% end %>
    
</div>

	
	<%= render "helper_code/tooltip_toggle" %>
	 
<script>
  $('#payment_warning_accept').click(function(e){    
    $('#payment_warning').fadeOut(400, function(){
      $('#actual_payment_info').fadeIn(400);
    });
  });
</script>