<div class="container-fluid tutor_content">
  <div class="tutor_tabs">
    <h3> Tutors 
      <% if current_user && current_user.id == @course.user_id && params[:visitor] != "visitor" && @user_organizer %>
        <small>
          <% if !@available_tutors.empty? %>
             <a href="#add_tutor" data-toggle="modal" data-target="#add_tutor" class="btn btn-primary btn-xs course_control">
               add Tutor
             </a>
          <% else %>
            <%= link_to 'add new tutor', new_organizer_tutor_path(@user_organizer), class:"btn btn-xs btn-default course_control"%>
          <% end %>
        </small>
      <% end -%>
    </h3>
  </div>
  <div class="row">
    <% if !@tutors.empty? %>
      <%= render @tutors %>
    <% else %>
      <div class="col-xs-12 col-sm-12 col-md-12">
        <h5>No info provided</h5>
      </div>
    <%end%>
  </div>
</div>


<%= render "new_tutor_modal" %>