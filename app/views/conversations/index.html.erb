<% title "Messages #{params[:type]}" %>

	

<div class="container-fluid">
	<div class="row">
		<div class=" col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
			<div class="profile_body" style="margin-bottom: 50px;">
				<div class="container-fluid title_header text-center">
			    <div class="title_text" >
			      Messages
			    </div>
				</div>
				<div class="container-fluid profile_content text-center" style="background-color: #FFFFFF;">
					
					<div class="row">
				    <h3 class="text-center featured_menu" style="padding-bottom: 30px;" >
				      <div class="col-xs-6 col-sm-6 col-md-6">
				        <a href="#inbox" role="tab" data-toggle="tab" id="inbox_tabs">
				          <span class="menu-item active" >
				            messages <br>
				          </span>
				          <span id="new_alert"> <%= current_user.unread_inbox_count > 0  ? "new": "" %></span>
				        </a>
				      </div>
				      <div class="col-xs-6 col-sm-6 col-md-6">
				        <a href="#trash" role="tab" data-toggle="tab" id="trash_tabs">
				          <span class="menu-item" >
				            trash<br>
				          </span>
				        </a>
				      </div>
				    </h3>
				  </div>
				  
				    
				  <!--tab content-->
				  
				  <div class="container-fluid">
				    <div class="tab-content">
				      <div class="tab-pane fade active in" id="inbox" style="margin-top: 15px;">
				        <div class="row">
									<div id="conversation_inbox">
										<%= render @conversations_inbox %>
									</div>
							
									<div class="row">
									  <div id="infinite-scrolling" class="text-center" style="color: #777777;">
									  	<%= will_paginate @conversations_inbox %>
									  </div>
									</div>
				        </div>
				      </div>
				       <div class="tab-pane fade" id="trash" style="margin-top: 15px; min-height: 350px;">
				        <div class="row">
				          <div id="conversation_trash">
										<%= render "conversation_trash" %>
									</div>
				        </div>
				      </div>
				    </div>
				  </div>
		
				</div>
			</div>
			
			<%= render "helper_code/single_page_tabs" %>