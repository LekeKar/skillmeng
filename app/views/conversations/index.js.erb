$('#conversation_inbox').append('<%= j render @conversations_inbox %>');
<% if @conversations_inbox.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @conversations_inbox %>');
<% else %>
  $('.pagination').remove();
<% end %>

