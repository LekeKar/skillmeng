<%= simple_form_for([@course, @review]) do |f| %>
  <%= f.error_notification %>
  
<ul class="list-group">
  <% @review.errors.full_messages.each do |msg| %>
    <li class="list-group-item list-group-item-warning"><%= msg %></li>
  <% end %>
</ul>

  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-6">
        <%= f.input :rating, :hint => 'from 1 - 5 stars', :label => 'Rating', :default => false, :collection => ['1','2','3','4','5'] %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <div style="color: grey;", id="anonymous_input">
          <%= f.input :anonymous, :label => 'I will like to remain anonymous'%>
        </div>
      </div>
    </div>
   <%= f.input :comment, label: "Review", :input_html => {:rows => 7} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back',:back, class:'btn btn-danger' %>
  </div>
<% end %>
