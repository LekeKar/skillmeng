
<%= simple_form_for([@course, @report]) do |f| %>
	<div class="form-inputs">
		<%= f.input :reason, :collection => [ "It's not a course", "It contains inappororiate matrial", "It's a scam", "Some other reason"], label: "What's wrong with this course?"-%>
		<%= f.input :explanation, label: "Further explanation" -%>
		<%= f.hidden_field :status -%>
		<%= f.hidden_field :admin_action -%>
	</div>

	<div class="form-actions text-center">
	    <%= f.button :submit, "Submit", id:"form_submit", data: {confirm: "This action will submit this report, are you sure?"}  %>
	    <%= link_to 'Cancel', @course, class:'btn btn-default', id:"form_cancel" %>
  	</div>
<% end -%>