<% title "Barter #{ params[:type]}" %>
<div class="container-fluid">
	<div class="row">
		<div class=" col-sm-10 col-md-8 col-md-offset-2 col-sm-offset-1">
			<div class="profile_body" style="margin-bottom: 50px;">
				<div class="container-fluid title_header text-center">
			    <div class="title_text">
			      Barter
			    </div>
				</div>
				<div class="container-fluid profile_content text-center" style="background-color: #FFFFFF;">
					<div class="row">
				    <h3 class="text-center featured_menu" style="padding-bottom: 30px;" >
				      <div class="col-xs-6 col-sm-6 col-md-6">
				        <a href="#received" role="tab" data-toggle="tab" id="received_tabs">
				          <span class="menu-item active" >
				            received<br>
				          </span>
				          <span id="new_alert"> <%= !@new_barter.empty? ? "new": "" %></span>
				        </a>
				      </div>
				      <div class="col-xs-6 col-sm-6 col-md-6">
				        <a href="#sent" role="tab" data-toggle="tab" id="sent_tabs">
				          <span class="menu-item" >
				            sent<br>
				          </span>
				        </a>
				      </div>
				    </h3>
				  </div>
				
			
	
			  	<!--tab content-->
			  
				  <div class="container-fluid">
				    <div class="tab-content">
				      <div class="tab-pane fade active in" id="received" style="margin-top: 15px;">
				        <div class="row" >
									<div id="barter_rec">
									  <%= render @barter_rec %>
									</div>
								</div>
								
								<div class="row">
								  <div id="infinite-scrolling" class="text-center" style="color: #777777;">
								  	<%= will_paginate @barter_rec %>
								  </div>
								</div>
				      </div>
				      <div class="tab-pane fade" id="sent" style="margin-top: 15px;">
				        <div class="row" >
									<div id="barter_sen">
										<%= render @barter_sen %>
									</div>
								</div>
								<div class="row">
								  <div id="infinite-scrolling" class="text-center" style="color: #777777;">
								  	<%= will_paginate @barter_sen %>
								  </div>
								</div>
				      </div>
				    </div>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>
			
			
			
			
			
			
			
	
 
<%= render "helper_code/raty" %>
<%= render "helper_code/tooltip_toggle" %>
<%= render "helper_code/single_page_tabs" %>