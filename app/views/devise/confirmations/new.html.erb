<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading" id="form_header">
          <h4 class="panel-title"> Resend confirmation instructions</h4>
        </div>
        <div class="panel-body new_class">
	  		<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
			  <%= f.error_notification %>
			  <%= f.full_error :confirmation_token %>

			  <div class="form-inputs">
			    <%= f.input :email, required: true, autofocus: true %>
			  </div>

  			  <div class="form-actions text-center">
  			    <%= f.button :submit, "Resend instructions", id:"form_submit", style:" width: 150px"  %>
  			    <%= link_to 'Cancel', root_path, class:'btn btn-default', id:"form_cancel", style:" width: 150px"  %>
  			  </div>
  			<% end %>
        </div>
      </div>
    </div>    
  </div>
</div>
