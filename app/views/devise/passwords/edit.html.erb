<% title "Edit login" %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading" id="form_header">
          <h4>Change your password</h4>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>
          
            <%= f.input :reset_password_token, as: :hidden, readonly: true %>
            <%= f.full_error :reset_password_token %>
          
            <div class="form-inputs">
              <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
            </div>
          
            <div class="form-actions text-center">
              <%= f.button :submit, "Change my password", id:"form_submit", style:"width: 200px;" %>
            </div>
          <% end %>
        </div>
        <div class="panel-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
</div>