<div class="container-fluid">
  <div class="row">
  	<div class="col-md-4 col-md-offset-4">
  		<div class="panel panel-default">
          <div class="panel-body">
            <strong style="color: grey;">New to Skillmeng? </strong> 	
            <%= link_to  'Sign Up', new_registration_path(resource_name), class:"btn btn-sm btn-warning pull-right" %>
          </div>
        </div>
	    <div class="panel panel-default">
	      <div class="panel-heading" id="form_header">
	          <h4 class="panel-title">Sign in</h4>
	      </div>
	 
			<div class="container-fluid" style="padding: 20px">
	
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <div class="form-inputs">
				    <%= f.input :email, required: false, autofocus: true %>
				    <%= f.input :password, required: false %>
				    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			    </div>
	
				  <div class="form-actions">
				    <%= f.button :submit, "Sign in", class: "btn btn-block"%>
				  </div> 
				<% end %>
	
			</div>
			
		
			
			<div class="panel-footer text-center">
				<%= render "devise/shared/links" %>
			</div>
	    </div>
	</div>    
  </div>
</div>

	