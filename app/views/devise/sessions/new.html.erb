<% title "User login" %>
<div class="container-fluid">
  <div class="row">
  	<div class="col-md-4 col-md-offset-4">
  		<div class="panel panel-default">
          <div class="panel-body">
            <strong style="color: grey;">New to Skillmeng? </strong> 	
            <%= link_to  'Sign Up', new_registration_path(resource_name), class:"btn btn-sm btn-warning pull-right" %>
          </div>
        </div>
	    <div class="panel panel-default">
	      <div class="panel-heading">
	          <h4 class="panel-title">Sign in</h4>

	      </div>
	      	<div class="panel-body new_class">
	      		
	      		<%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-default btn-block facebook_btn" do %>
	    			<i class="fa fa-facebook"></i> | Continue with Facebook
	    		<% end %>
	    		<%= link_to user_google_oauth2_omniauth_authorize_path, class:"btn btn-default btn-block google_btn" do %>
	    			<i class="fa fa-google-plus"></i> | Continue with Google
	    		<% end %>
		
			</div>
			
			<div class="container-fluid">
				
				<hr></hr>
				<p  class="text-center" style="color:grey;" >
					<a data-toggle="collapse" href="#collapselogin" id="form_drop_down" aria-expanded="false" aria-controls="collapseExample">
					or use email </a>
				</p>
				<div class="collapse" id="collapselogin">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs">
					    <%= f.input :email, required: false, autofocus: true %>
					    <%= f.input :password, required: false %>
					    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					  </div>
		
					  <div class="form-actions">
					    <%= f.button :submit, "Sign in", class: "btn btn-block"%>
					  </div> <br></br>
					<% end %>
				</div>
				<br></br>
			
			</div>
			
		
			
			<div class="panel-footer text-center">
				<%= render "devise/shared/links" %>
			</div>
	    </div>
	</div>    
  </div>
</div>

	
