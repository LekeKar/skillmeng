<% title "about #{@course.title}" %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<% if session[:setup_wizard] %>
				<%= render 'helper_code/wizard_controls', next_step_name: "contact", current_step_name: "about", step_number: "Step 2 of 5" %>
			<% end %>
	   	<div class="panel panel-default" >
	    	<div class="panel-heading" id="form_header">
					<h4>About<small style="color: #FFF;"> <br> <%= @course.title %></small></h4>
				</div>
				<div class="panel-body">
					<%= render 'form' %>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
 <% unless @about.errors.any? %>
  $(document).ready(function() { $(".add_qualification").click() } )
  $(document).ready(function() { $(".add_checklist_item").click() } )
  $(document).ready(function() { $(".add_award").click() } )
 <% end %>
</script>

