<% title "Edit announcement ID#{@announcement.id}" %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
	   		<div class="panel panel-default">
	    		<div class="panel-heading">
					<h4>Edit News<small> <br> for <%= @announcement.subject %></small>
						<%= link_to announcement_path, method: :delete, class:"btn btn-sm btn-default pull-right", data: {confirm: "This action will delete this news, Are you sure?"} do %>
							<i class="fa fa-trash" style = "color: #d9534f; font-size: 15px"></i>
				    <% end -%>
			    </h4>
				</div>
				<div class="panel-body">
					<%= render 'form' %>
				</div>
				<% if @announcement.photo.present? %>
					<div class="panel-footer">
						<small>current picture </small>
	          <%= image_tag @announcement.photo.url(:rectangle), class:"img-responsive", style: "margin: 0 auto; margin-bottom: 15px;"%>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

