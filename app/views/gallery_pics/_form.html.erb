<%= simple_form_for([@course, @gallery_pic]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :image, as: :file, required: true %>
  </div>

  <div class="form-inputs">
    <%= f.input :caption, label: "Caption (300 char max)",  :input_html => {:rows => 5, :id => "text"}, maxlength: "300" %>
  </div>
  <h6 class="text-right" id="count_message" style="color: grey"></h6>


  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back', :back, class:'btn btn-danger' %>
  </div>
<% end %>
