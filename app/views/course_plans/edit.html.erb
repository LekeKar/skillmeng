<% title "Plans"%>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
			<% if session[:setup_wizard] %>	
				<%= render 'wizard_controls'%>
			<%end%>
	   	<div class="panel panel-default">
	    	<div class="panel-heading" id="form_header">
					<h4>Plan<small style="color: #FFF;"><br><%= @course.title %></small></h4>
					<%= link_to course_course_plan_path(@course, @course_plan), style:"position: relative; margin-top: -35px; font-size: 30px; color: #FFF;", method: :delete, data: {confirm: "This action will delete this day, are you sure?"}, class:"pull-right" do %>
						<i class="fa fa-trash"></i>
					<% end %>
				</div>
				<div class="panel-body">
					<div class="row mobile_centralize" style="margin-bottom: 15px;">
						<div class="col-md-12">
							
							<%= link_to plan_status_toggle_path(@course_plan) do %>
								<% if @course_plan.status == 'Open' %>
									<button class="btn btn-success btn-md" role="button"><i class="fa fa-pause"></i> Pause plan</button>
								<% else %>
									<button class="btn btn-danger btn-md" role="button"><i class="fa fa-play"></i> Resume plan</button>
								<% end %>
							<% end %>
						
						</div>
					</div>
					<%= render 'form' %>
				</div>
				<% if @course_plan.display_pic.present? %>
					<div class="panel-footer">
						<div class="text-center" style="color: #777; margin-bottom: 10px;">
							<strong>current picture</strong>
						</div>
	          <%= image_tag @course_plan.display_pic.url(:large), class:"img-responsive", style: "margin: 0 auto; margin-bottom: 15px;"%>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>