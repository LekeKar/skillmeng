<h1>Listing Price Plans</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_plans.each do |course_plan| %>
      <tr>
        <td><%= link_to 'Show', course_plan %></td>
        <td><%= link_to 'Edit', edit_course_plan_path(course_plan) %></td>
        <td><%= link_to 'Destroy', course_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

