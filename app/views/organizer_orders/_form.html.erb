      <div class="col-md-6" id="order_explaination">
        <%= f.simple_fields_for :organizer_credit_order do |builder| %>
          <div class="form-inputs">
            <div class="row">
              <div class="container-fluid text-left">
                <%= builder.input :text_quantity, label: false, prompt: "Select Quantity", collection: [50,100,500,1000] %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
