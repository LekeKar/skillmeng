
<div class="nested-fields">
  <div class="row container-fluid">
    <div class="col-xs-12 col-sm-2 col-md-2">
      <%= f.input :price, label: "Price", input_html: { min: '0', step: 'any' }, placeholder: "â‚¦", required: true %>
    </div>
    <div class="col-xs-5 col-sm-2 col-md-2">
      <%= f.input :quantity, input_html: { min: '1', step: 'any' }, label: "For" %>
    </div>
    <div class="col-xs-1 col-sm-1 col-md-1" style="padding: 0px; margin-top: 30px; ">
      <i class="fa fa-times"></i>
    </div>
    <div class="col-xs-6 col-sm-3 col-md-3 unit_input">
      <%= f.input :unit, label: "Frequency", :collection => ['Session','Course','Day','Week','Month','Year'], style: 'width: 50px'%>
    </div>
    <div class="col-xs-9 col-sm-3 col-md-4">
      <%= f.input :explaination, label: "Details (optional)"  %>
    </div>
    <div class="pull-right">
      <%= link_to_remove_association f, class: "btn btn-danger", style: "margin-top: 30px;", data: {confirm: "This action will delete this Price plan, are you sure?"} do %>
         <i class="fa fa-times"></i> 
      <%end%>
    </div>
  </div>
</div>
<hr>