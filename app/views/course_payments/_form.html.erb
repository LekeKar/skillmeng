<%= simple_form_for([@course, @course_payment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs bank_details">
    <h4>Fees <i class="fa fa-question-circle" data-toggle="tooltip" title="These are all the price schemes that would be available for this course"></i></h4>
      <div class="well">
        <div id="course_prices">
          <%= f.simple_fields_for :course_prices do |course_price| %>
            <%= render 'course_price_fields', f: course_price %>
          <% end %>
          <div class="links text-center">
            <%= link_to_add_association f, :course_prices, class:"add_plan", id:"form_drop_down" do %>
               <i class="fa fa-plus"></i> Plan
            <% end %>
          </div>
        </div>
        <div class="has-error text-center">
          <%= f.error :base %>
        </div>
      </div>
      
    <h4 style="margin-bottom: 0px; ">Bank info</h4>
      <div style=" margin-bottom: 20px;">
        <% if @available_accounts %>
          <a  data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" style="color: rgba(220,110,50,0.7);">
            Use previous bank details
          </a>
          <div class="collapse" id="collapseExample">
            <table class="table table-hover vertical-alilgn ">
              <% for account in  @available_accounts%>
                <tr>
                  <td> 
                    <div id="bank_name_suggestion"  style="display: inline">
                      <%= account.bank_name %>
                    </div>
                    </font>|
                    <div id="account_number_suggestion" style="display: inline">
                      <%= account.bank_account_number %> 
                    </div>
                    <div id="account_name_suggestion" style="display: none">
                      <%= account.bank_account_name %> 
                    </div>
                    <div id="refund_instruction_suggestion" style="display: none">
                      <%= account.refund_instruction %> 
                    </div>
                     <div id="payment_instruction_suggestion" style="display: none">
                      <%= account.payment_instruction %> 
                    </div>
                  </td>
                  <td >
                    <button type="button" class="fill_bank_details btn btn-warning btn-xs vert-aligned">
                      use
                    </button>
                  </td>
                </tr> 
              <% end %>
            </table>
          </div>
        <% end %>
      </div>
  
    <div class="bank_name_ans">
      <%= f.input :bank_name, label: "Bank name", :collection => @bank_name %> 
    </div>
    
    <div class="row">
      <div class="col-md-6 account_name_ans">
        <%= f.input :bank_account_name, label: "Account name ", hint: "As shown on account statement"  %>
      </div>
      <div class="col-md-6 account_number_ans">
         <%= f.input :bank_account_number, label: "Account number"  %>
      </div>
    </div>
    <%= f.hidden_field :paystack_id %>
    <%= f.hidden_field :paystack_plan %>
    
    <div class="payment_instruction_ans">
      <%= f.input :payment_instruction, label: "Payment instructions",  :input_html => {:rows => 5, :id => "text"}, maxlength: "300" %>
    </div>
    <h6 class="text-right" id="count_message" style="color: grey" data-value="300"></h6>
    <div class="refund_instruction_ans">
      <%= f.input :refund_instruction, label: "Refund instructions",  :input_html => {:rows => 5, :id => "text2"}, maxlength: "300" %>
    </div>
    <h6 class="text-right" id="count_message2" style="color: grey" data-value="300"></h6>
    <hr>
    <h4>Trade by Barter <i class="fa fa-question-circle" data-toggle="tooltip" title="On Skillmengâ„¢, course managers can offer to teach a course in exchange of another tought by  others."></i></h4>
    <%= f.input :trade_by_barter, label: "People can offer to teach me a skill in exchange for this class ", maxlength: "300" %>
  </div>

  <div id="desktop_disapear" style="margin-bottom: 20px;">
    <hr></hr>
  </div>
  
  
	<% session[:setup_wizard] ? @pass_param = "Next step" : @pass_param = "Submit"  %>
  <div class="form-actions text-center">

    <% if session[:setup_wizard] %>
     <%= link_to 'Back', edit_course_contact_path(@course, @contact), class:'btn btn-default', id:"form_cancel" %>
		<% end%>
    <%= f.button :submit, name: "type", value: "#{@pass_param}", id:"form_submit" %>
		<% unless session[:setup_wizard] %>
		  <%= link_to 'Cancel', @course, class:'btn btn-default', id:"form_cancel" %>
		<% end %>
  </div>
<% end %>

<%= render "helper_code/tooltip_toggle" %>