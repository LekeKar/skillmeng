<% title "Home" %>
<div class="wallpaper">
  <% if @slider_pic %>
    <% @course = Course.find(@slider_pic.course_id) %>
    <div class="jumbotron jumbotron_top" style="background: url('<%= @slider_pic.slider_image.url(:original) %>'); margin-top: -20px;">
    
      <%= render "welcome_search"%>
      <div id="course_title">
      
        <%= link_to @course do%>
          <%= @course.title %>
        <% end %>  
      </div>
    </div>
  <% else %>
    <div class="jumbotron jumbotron_top" style='background: url(<%= image_tag "home_bg_1.jpeg"%>); margin-top: -20px;'>
      <%= render "welcome_search"%>
    </div>
  <% end %>
</div>

<div class="container-fluid text-center" style="margin-bottom: 30px;">
  <h2 style="margin: 30px;">categories</h2>
  <div class="row">
  
      <% @category_count.each do |key,array| %>
        <% if array > 0 %>
          <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6">
            <%= link_to "#{key}", courses_path(search_cat: "#{key}"), class:"couse_cat btn btn-primary btn-md" %>
          </div>
        <% end %>
      <% end %>
   
  </div>
</div>
