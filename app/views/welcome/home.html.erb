<% title "Home" %>
<div class="wallpaper">
  <% if @slider_pic %>
    <% @course = Course.find(@slider_pic.course_id) %>
    <div class="jumbotron jumbotron_top" style="background: url('<%= @slider_pic.slider_image.url(:original) %>'); margin-top: -20px;">
      <div id="course_title">
        <%= link_to @course do%>
          <%= @course.title %>
        <% end %>  
      </div>
    </div>
  <% else %>
    <div class="jumbotron jumbotron_top" style='background: url(<%= image_tag "home_bg_1.jpeg"%>); margin-top: -20px;'>
      
    </div>
  <% end %>
  <div class="container" style= "color:#FFFFFF;" id="welcome_text">
    <div class="panel panel-default welcome_panel">
      <div class="panel-body">
        <h1>
          I would like to <br>gain skills in
          <%= form_tag(search_courses_path, method: 'get', id: "home_search" ) do %>
            <div class="input-group">
              <%= text_field_tag :search, nil, class: 'form-control', id: 'courses_search_mobile', autocomplete: :off, placeholder: "search skillmeng" %>
              <div class="input-group-btn search_panel">
                <%= submit_tag "GO", class: 'btn btn-default', :name => nil %>
              </div>
            </div>
          <% end %>
        </h1>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid text-center" style="margin-bottom: 30px;">
  <h2 style="margin: 30px;">categories</h2>
  <div class="row">
    <div class="container">
      <% @category_count.each do |key,array| %>
        <% if array.count > 0 %>
          <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6">
            <%= link_to "#{key}", courses_path(search_cat: "#{key}"), class:"couse_cat btn btn-primary btn-md" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


<div class="container-fluid" style="background-color: #FFF;">
  <div style="margin-top: 10px; margin-bottom: 50px; ">
    <div id="homepage_tutor">
      <h2 class="text-center">teach a course</h2>
      <div class="row" style="margin-top: 20px;">
        <div class="col-md-6 col-xs-12 col-sm-6">
          <%= image_tag 'skill_teach.jpeg', id:"teach_skill" %>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-6" class="mobile_justify">
          <div class="container-fluid">
            <p style="font-size: 1.5em; font-weight: 300; text-align: justify;" > 
