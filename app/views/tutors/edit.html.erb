<% title "Edit #{@tutor.name}" %>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
	   		<div class="panel panel-default">
	    		<div class="panel-heading" id="form_header">
					<h4>Edit <%= @tutor.name %><small style="color: #FFF;"> <br><%= @user_organizer.name %></small></h4>
				</div>
				<div class="panel-body">
					<%= render 'form' %>
				</div>
				<% if @tutor.avatar.present? %>
					<div class="panel-footer">
						<div class="text-center" style="color: #777; margin-bottom: 10px;">
							<strong>current picture</strong>
						</div>
	          <%= image_tag @tutor.avatar.url(:medium), class:"img-responsive", style: "margin: 0 auto; margin-bottom: 15px;"%>
	        </div>
				<% end %>
		
			</div>
		</div>
	</div>
</div>

