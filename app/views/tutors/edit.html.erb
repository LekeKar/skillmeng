<% title "Edit #{@tutor.name}" %>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
	   		<div class="panel panel-default">
	    		<div class="panel-heading">
					<h4>Edit <%= @tutor.name %><small> <br> for <%= @user_organizer.name %></small></h4>
				</div>
				<div class="panel-body">
					<%= render 'form' %>
				</div>
				<% if @tutor.avatar.present? %>
					<div class="panel-footer">
						<small>current picture</small>
	          <%= image_tag @tutor.avatar.url(:medium), class:"img-responsive", style: "margin: 0 auto; margin-bottom: 15px;"%>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

